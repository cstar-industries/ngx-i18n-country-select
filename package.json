{
  "name": "ngx-i18n-country-select",
  "version": "1.2.0",
  "description": "Angular Bootstrap i18n country select input",
  "scripts": {
    "build": "gulp build",
    "build:watch": "gulp",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -a resources -n ngx-i18n-country-select -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "lite": "lite-server",
    "playground:build": "tsc -p playground -w",
    "playground": "concurrently \"npm run build:watch\" \"npm run playground:build\" \"npm run lite\"",
    "test": "tsc && karma start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/osahner/ngx-i18n-country-select.git"
  },
  "author": {
    "name": "Oliver Sahner",
    "email": "osahner@medianet.de"
  },
  "keywords": [
    "angular",
    "bootstrap",
    "select",
    "widget",
    "i18n"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osahner/ngx-i18n-country-select.git/issues"
  },
  "peerDependencies": {
    "@angular/core": "^4.2.4 || ^5.0.0",
    "@ngx-translate/core": "^9.0.1",
    "bootstrap": "^4.0.0-beta.2",
    "i18n-iso-countries": "^3.2.2"
  },
  "devDependencies": {
    "@angular/common": "^5.0.5",
    "@angular/compiler": "^5.0.5",
    "@angular/compiler-cli": "^5.0.5",
    "@angular/core": "^5.0.5",
    "@angular/forms": "^5.0.5",
    "@angular/http": "^5.0.5",
    "@angular/platform-browser": "^5.0.5",
    "@angular/platform-browser-dynamic": "^5.0.5",
    "@compodoc/compodoc": "^1.0.5",
    "@types/jasmine": "^2.8.2",
    "@types/node": "^6.0.92",
    "angular-in-memory-web-api": "^0.5.1",
    "bootstrap": "^4.0.0-beta.2",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "core-js": "^2.5.1",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
