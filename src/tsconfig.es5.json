{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": "",
     "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "ngx-translate/*": [
        "../node_modules/ngx-translate/*"
      ]
    },
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngx-i18n-country-select.js",
    "flatModuleId": "ngx-i18n-country-select"
  },
  "files": [
    "./index.ts"
  ]
}
